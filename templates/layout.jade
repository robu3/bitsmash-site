doctype html
block vars
	- var bodyclass = null;
html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width')
			title
				block title
				= locals.name
			link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
			link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Open+Sans:400,700")
			link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Droid+Sans")
			link(rel='stylesheet', href='/css/main.css')
			script(src=locals.url + "/scripts/Processing.js/processing.min.js")
			script(src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js")
			script(src=locals.url + "/scripts/bitsmash_logo/simulation.js")
			script(src=locals.url + "/scripts/bitsmash_logo/cell.js")
			script(src=locals.url + "/scripts/bitsmash_logo/bitsmash_logo.js")
			script(src=locals.url + "/scripts/bitsmash_logo/bitsmash.js")
	body(class=bodyclass)
		header.header
			div#bitsmash_logo_text_wrapper
				div#bitsmash_logo_text
					h1 BITSMASH
					h2 Studios, LLC
			div.canvas_wrapper
				canvas#bitsmash_logo(data-processing-sources=locals.url + "/scripts/bitsmash_logo/bitsmashjs.pde")
			div.content-wrap
				block header
					p.description= locals.description

		div#content
			div.content-wrap
				block content
					h2 Welcome to zombocom!
		footer
			div.content-wrap
				block footer
					section.about
						!=contents['about.md'].html
					section.copy
						p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
							a(href='https://github.com/jnordberg/wintersmith') Wintersmith
