doctype html
block vars
	- var bodyclass = null;
html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width')
			title
				block title
				= locals.name
			link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
			//link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Open+Sans:400,700")
			//link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Droid+Sans")
			link(rel='stylesheet', href='/foundation/stylesheets/app.css')
			script(src=locals.url + "/scripts/Processing.js/processing.min.js")
			script(src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js")
			script(src=locals.url + "/scripts/bitsmash_logo/simulation.js")
			script(src=locals.url + "/scripts/bitsmash_logo/cell.js")
			script(src=locals.url + "/scripts/bitsmash_logo/bitsmash_logo.js")
			script(src=locals.url + "/scripts/bitsmash_logo/bitsmash.js")
				
			script.
				(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
				(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
				m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
				})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

				ga('create', 'UA-51128706-1', 'bitsmash.co');
				ga('send', 'pageview');


	body
		header
			div.fixed
				nav.top-bar
					ul.title-area
						li.name
							h1
								a(href="/") BITSMASH Studios

					section.top-bar-section
						ul.right
							li
								a(href="/projects/") Projects
							li
								a(href="/blog/") Blog
			div.row
				div.large-12.columns
					div#bitsmash_logo_text_wrapper
						div#bitsmash_logo_text
							h1 BITSMASH
							h2 Studios, LLC
					div.canvas_wrapper
					canvas#bitsmash_logo(data-processing-sources=locals.url + "/scripts/bitsmash_logo/bitsmashjs.pde")
			block header
				div.row
					p.large-12.columns.description= locals.description

		div#content
			block content
				h2 Welcome to zombocom!

		footer
			block footer
				div.row
					section.about.large-12.columns
						!=contents['about.md'].html
				div.row
					section.copy.large-12.columns
						p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
							a(href='https://github.com/jnordberg/wintersmith') Wintersmith
